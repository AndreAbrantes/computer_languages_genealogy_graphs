digraph asde91 {
    ranksep="1.0 equally";
    nodesep="1.0 equally";
    size="200,100";
    fontname="Helvetica";
    {
        node [shape=box, fontsize=16];
        /* the time-line graph */
        1955 -> 1960 -> 1965 -> 1970 -> 1975 -> 1980 -> 1985 ->
                1990 -> 1995 -> 2000 -> 2005 -> 2010 -> 2015;
        /* ancestor programs */
        "Speedcode"; "FORTRAN"; "ALGOL 58"; "COBOL"; "LISP";
    }
    { rank = same;
	    <%= @recent_languages.map { |l| "\"#{l}\"" }.join("; ") %>
;
    };
    node [shape=box];
    <% @languages_by_year.each do |group| %>
    { rank = same; <%= group[:year] %>; <%= group[:languages].map { |l| "\"#{l}\"" }.join(";") %> }
    <% end %>

	<% @language_versions.each do |pair| %>
	"<%= pair.first %>" -> "<%= pair.last %>" [style=dotted];
	<% end %>

	<% @languages.keys.each do |language_name| %>
	"<%= language_name %>" -> { <%= @languages[language_name][:influenced].map { |l| "\"#{l}\"" }.join("; ") %> }
	<% end %>
}
